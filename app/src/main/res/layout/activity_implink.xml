<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_margin="8dp"
                android:elevation="5dp"
                card_view:cardElevation="@dimen/cardview_compat_inset_shadow">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/thumbnail1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/oner"/>


                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/thumbnail1"
                        android:maxLines="3"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:text="Ministry of Women and Child Development "
                        android:textColor="#222"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:autoLink="all"
                        android:clickable="true"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:elevation="5dp"
                card_view:cardElevation="@dimen/cardview_compat_inset_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/thumbnail2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/twor"/>


                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/thumbnail1"
                        android:maxLines="3"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:text=" Ministry of Human Resource Development"
                        android:textColor="#222"
                        android:textStyle="bold"
                        android:textSize="22dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:elevation="5dp"
                card_view:cardElevation="@dimen/cardview_compat_inset_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/thumbnail3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/threer"/>


                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/thumbnail1"
                        android:maxLines="3"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:text="Khoya-Paya Web Portal "
                        android:textColor="#222"
                    android:textStyle="bold"
                    android:textSize="22dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view4"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:elevation="5dp"
                card_view:cardElevation="@dimen/cardview_compat_inset_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/thumbnail4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fourr"/>


                    <TextView
                        android:id="@+id/title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/thumbnail1"
                        android:maxLines="3"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:text=" Track the Missing Child"
                        android:textColor="#222"
                    android:textStyle="bold"
                    android:textSize="22dp" />

                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

